# Backend port
PORT=8787

# Session
SESSION_SECRET=change-me-to-a-long-random-string

# Google OAuth (Nest SDM)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8787/auth/google/callback

# Google Device Access (SDM) project ID (a.k.a. enterprise project ID)
DEVICE_ACCESS_PROJECT_ID=enterprises/your-device-access-project-id

# Optional: real lights/thermostats via Home Assistant
# Uncomment and fill to enable
# PROVIDER_LIGHTS=homeassistant
# HA_BASE_URL=http://homeassistant.local:8123
# HA_TOKEN=your-long-lived-access-token
